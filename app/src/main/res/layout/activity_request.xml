<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.d.life.Request"
    android:weightSum="1">


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Request"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"/>



    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray"
        android:id="@+id/sorgan"
        android:spinnerMode="dropdown"
        android:entries="@array/organ"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="end"/>

    <EditText
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:id="@+id/scontact"
        android:background="@drawable/gray"
        android:hint="  Contact info"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <EditText
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="  age"
        android:ems="10"
        android:maxLines="1"
        android:background="@drawable/gray"
        android:id="@+id/sage"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <Spinner
        android:layout_width="125dp"
        android:layout_height="24dp"
        android:id="@+id/sblood"
        android:layout_weight="0.19"
        android:background="@drawable/gray"
        android:entries="@array/blood"
        android:spinnerMode="dropdown"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:id="@+id/sstate"
        android:background="@drawable/gray"
        android:hint="State"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="right"/>

    <EditText
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:id="@+id/scity"
        android:background="@drawable/gray"
        android:hint="city"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="Reason"
        android:background="@drawable/gray"
        android:id="@+id/sreason"
        android:layout_weight="0.46"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/brequest"/>

     </LinearLayout>
</ScrollView>
